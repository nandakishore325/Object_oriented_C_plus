#include<iostream>
using namespace std;
int main()
{
    int a,i,b=0,flag=0;
    cout<<"Enter the number:\n";
    cin>>a;
    b=a/2;
    for(i=2;i<=b;i++)
    {
        if(a%i==0)
        {
            cout<<"It is not a prime number";
            flag=1;
            break;
        }
    }
    if(flag==0)
    {
        cout<<"It is a prime number :\n";
    }
    return 0;
}
